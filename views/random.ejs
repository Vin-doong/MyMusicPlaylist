<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>랜덤 키워드 검색</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" href="/favicon_io/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/random.css" />
</head>
<body>
    <!-- 헤더 -->
    <%- include('partials/header'); %>

  <div class="container mt-5">
    <h1 class="text-center">랜덤 키워드 검색</h1>

    <!-- 검색 폼 -->
    <form id="randomForm" class="text-center mt-4">
      <textarea id="keywords" class="form-control w-50 mx-auto" placeholder="쉼표로 키워드를 구분해 입력하세요. 예: love, happy, chill" required></textarea>
      <button type="submit" class="btn btn-primary mt-3">랜덤 노래 검색</button>
    </form>

    <!-- 결과 표시 -->
    <div id="result" class="mt-5 text-center"></div>
  </div>

  <!-- 플레이어 푸터 추가 -->
  <div id="playerFooterContainer" class="footer-container d-none">
    <%- include('partials/playerFooter'); %>
  </div>

  <script>
document.getElementById('randomForm').addEventListener('submit', async (e) => {
  e.preventDefault();

  const keywordsInput = document.getElementById('keywords').value;
  const resultDiv = document.getElementById('result');
  const playerFooterContainer = document.getElementById('playerFooterContainer');
  resultDiv.innerHTML = '<p>검색 중...</p>';

  const keywords = keywordsInput.split(',').map(keyword => keyword.trim()).filter(keyword => keyword.length > 0);

  if (keywords.length === 0) {
    resultDiv.innerHTML = '<p class="text-danger">키워드를 입력해주세요.</p>';
    return;
  }

  try {
    const response = await fetch('/random', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ keywords }),
    });

    const { track } = await response.json();
    if (track && track.uri) {
      resultDiv.innerHTML = `
        <h3>랜덤 키워드 검색 결과</h3>
        <div class="card mx-auto" style="width: 18rem;">
          <img src="${track.thumbnail || 'https://via.placeholder.com/150'}" class="card-img-top" alt="${track.name}">
          <div class="card-body">
            <h5 class="card-title">${track.name}</h5>
            <p class="card-text">아티스트: ${track.artists.join(', ')}</p>
            <button class="btn btn-success" onclick="playTrack('${track.uri}')">재생</button>
          </div>
        </div>
      `;

      // Player Footer 표시
      playerFooterContainer.classList.remove("d-none");
      playTrack(track.uri);//자동재생
    } else {
      resultDiv.innerHTML = '<p class="text-danger">곡 정보를 가져올 수 없습니다.</p>';
      console.error('받은 트랙 데이터:', track);
    }
  } catch (error) {
    console.error('랜덤 검색 실패:', error);
    resultDiv.innerHTML = '<p class="text-danger">랜덤 검색 실패</p>';
  }
});
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
